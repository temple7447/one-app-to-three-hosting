 <section class="container">
    <div><h1 class="text-blackanimate__animated animate__slower wow animate__backInRight" style="text-align:center ; font-family:Georgia, 'Times New Roman', Times, serif;font-weight:bold">ASSIGNMENT SUBMITTION FORM</h1></div>
        <div>
            <form class="form form-control my-2" enctype="multipart/form-data"  action="/student" method="POST">
            <div class="message" style="text-align: center; background-color:red ">{{message}}</div>
            <div class="success" style="text-align: center; background-color:green ">{{success}}</div>
            <div class="allfield" style="text-align: center; background-color:green "></div>
            <div class="matriculation" style="text-align: center;color:#fff; background-color:red ">{{matriculation}}</div>
                <div>
                    <label for="name" style=" font-family:Georgia, 'Times New Roman', Times, serif;font-weight:700; font-size:20px">NAME OF STUDENT</label>
                    <input type="text" class="form-control" name="fullname" style="border: none; border-bottom:2px solid rgb(117, 76, 19)"  placeholder="Enter your file name" id="fullname">
                </div>
                 
           
                <div>
                    <label for="mat" style=" font-family:Georgia, 'Times New Roman', Times, serif;font-weight:700; font-size:20px">MAT NUMBER</label>
                    <input type="text" class="form-control mat" name="matriculation"  placeholder="Enter your matriculation number" style="border: none; border-bottom:2px solid rgb(117, 76, 19)" id="mat">
                </div>
                <div>
                    <label for="mat" style=" font-family:Georgia, 'Times New Roman', Times, serif;font-weight:700; font-size:20px">PROGRAM</label>
                    <select class="form-control morneven" style="border: none; border-bottom:2px solid rgb(117, 76, 19)" name="morneven" id="program">
                        <option value="MORNING">MORNING</option>
                        <option value="EVENING">EVENING</option>
                      </select>
                </div>
                <div>
                    <label for="mat" style=" font-family:Georgia, 'Times New Roman', Times, serif;font-weight:700; font-size:20px">LEVEL</label>
                    <select class="form-control level" style="border: none; border-bottom:2px solid rgb(117, 76, 19)" name="level" id="level">
                        <option value="HND2">HND2</option>
                        <option value="HND1">HND1</option>
                        <option value="ND2">ND2</option>
                        <option value="ND1">ND1</option>
                      </select>
                </div>
                <div class="my-2">
                    <label for="file" style=" font-family:Georgia, 'Times New Roman', Times, serif;font-weight:700; font-size:20px">FILE</label>
                    <input type="file" class="form-control file" style="border: none; border-bottom:2px solid rgb(117, 76, 19)" name="avater"   id="file">
                </div>
                <button type="submit" class="form-control btn-primary">Click To Submit</button>
            </form>



   

           

        </div>

    
    </section>
    